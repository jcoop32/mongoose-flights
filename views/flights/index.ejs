<%- include('../partials/header.ejs') %>

<h1>Flights:</h1>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departs</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < flight.length; i++){%>
      <tr>
        <td><%= flight[i].airline %></td>
        <td><%= flight[i].airport%></td>
        <td><%= flight[i].flightNo %></td>
        <%let date = new Date()%> 
        <%if(flight[i].departs.getTime() < date.getTime()){%>
        <td style="color: red;"><%= flight[i].departs %></td>
        <%} else{ %>
          <td style="color: black;"><%= flight[i].departs %></td>
        <%}%>
      </tr>
    <%}%>
    <!-- Close the forEach using EJS here -->
  </tbody>
</table>

